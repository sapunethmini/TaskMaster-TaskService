# .env.local - Environment variables for local development
# Use this file when running the application locally (not in Docker)

# --- Database Configuration ---
# Connect to MySQL running locally
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/taskdb
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=9090

# --- Kafka Configuration ---
# Connect to Kafka running locally
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# --- Service Discovery Configuration ---
# Connect to Eureka server running locally (if using)
EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE=http://localhost:8761/eureka/

# --- Frontend URL for CORS ---
# Allow requests from your Angular app running locally
FRONTEND_URL=http://localhost:4200

# --- CORS Configuration ---
# Multiple origins separated by comma
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000